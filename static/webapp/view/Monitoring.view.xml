<mvc:View controllerName="de.regatta_hd.infoportal.controller.Monitoring" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
  <mvc:content>

    <Page title="{i18n>launchpad.statistics.header}" class="sapUiNoContentPadding" showNavButton="true" navButtonPress="onNavBack">
      <headerContent>
        <Button tooltip="{i18n>common.refresh}" icon="sap-icon://refresh" press="onRefreshButtonPress" />
      </headerContent>

      <content>
        <List id="registrationsList" items="{monitoring>/db}" headerText="Datenbankverbindungen">
          <ObjectListItem title="{monitoring>name}" number="{monitoring>value}"></ObjectListItem>
        </List>

        <List id="racesList" items="{monitoring>/mem}" headerText="Speicher">
          <ObjectListItem title="{monitoring>name}" number="{monitoring>value}"></ObjectListItem>
        </List>

        <List id="heatsList" items="{monitoring>/cpus}" headerText="Prozessoren">
          <ObjectListItem title="{monitoring>name}" number="{monitoring>value}"></ObjectListItem>
        </List>
      </content>
    </Page>

  </mvc:content>
</mvc:View>