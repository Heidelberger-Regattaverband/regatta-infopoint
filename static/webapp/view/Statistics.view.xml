<mvc:View controllerName="de.regatta_hd.infoportal.controller.Statistics" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
  <mvc:content>

    <Page title="{i18n>launchpad.statistics.header}" class="sapUiNoContentPadding" showNavButton="true" navButtonPress=".onNavBack">
      <headerContent>
        <Button text="{=!${device>/system/phone}?${i18n>common.refresh}:''}" tooltip="{i18n>common.refresh}" icon="sap-icon://refresh"
          press=".onRefreshButtonPress" />
      </headerContent>

      <content>
        <Table id="statisticsTable"
          items="{path:'statistics>/all',sorter:{path:'group',descending:false,group:'.getGroup'},groupHeaderFactory:'.getGroupHeader'}">
          <columns>
            <Column>
              <Text text="Name" />
            </Column>
            <Column>
              <Text text="Value" />
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <Text text="{statistics>name}" />
                <Text text="{statistics>value}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </content>
    </Page>

  </mvc:content>
</mvc:View>