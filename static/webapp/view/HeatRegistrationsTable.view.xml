<mvc:View controllerName="de.regatta_hd.infopoint.controller.HeatRegistrationsTable" xmlns="sap.m" xmlns:f="sap.f"
  xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
  <mvc:content>
    <Page title="{i18n>common.result}" class="sapUiNoContentPadding" showNavButton="true" navButtonPress="onNavBack">
      <content>

        <f:DynamicPage toggleHeaderOnTitleClick="false" class="sapUiNoContentPadding">
          <!-- DynamicPage Title -->
          <f:title>
            <f:DynamicPageTitle>
              <f:heading>
                <Title text="{path: 'heatRegistrations>/race', formatter: '.formatter.nrRaceLabel'}, {path: 'heatRegistrations>/', formatter: '.formatter.heatLabel'}"
                  wrapping="true" />
              </f:heading>

              <f:expandedContent>
                <Label text="{heatRegistrations>/race/longLabel} {heatRegistrations>/race/comment}" />
              </f:expandedContent>

              <f:actions>
                <Button tooltip="{i18n>common.refresh}" icon="sap-icon://refresh" press="onRefreshButtonPress" />
              </f:actions>

              <f:navigationActions>
                <Button type="Transparent" icon="sap-icon://close-command-field" press="onFirstPress" tooltip="First"
                  enabled="{= ${heat>/_nav/isFirst} ? false : true }" />
                <Button type="Transparent" icon="sap-icon://navigation-left-arrow" press="onPreviousPress" tooltip="Previous"
                  enabled="{= ${heat>/_nav/isFirst} ? false : true }" />
                <Button type="Transparent" icon="sap-icon://navigation-right-arrow" press="onNextPress" tooltip="Next"
                  enabled="{= ${heat>/_nav/isLast} ? false : true }" />
                <Button type="Transparent" icon="sap-icon://open-command-field" press="onLastPress" tooltip="Last"
                  enabled="{= ${heat>/_nav/isLast} ? false : true }" />
              </f:navigationActions>
            </f:DynamicPageTitle>
          </f:title>

          <!-- DynamicPage Header -->
          <f:header>
            <f:DynamicPageHeader>
              <layout:HorizontalLayout allowWrapping="true">
                <layout:VerticalLayout class="sapUiMediumMarginEnd">
                  <ObjectAttribute title="{i18n>common.time}" text="{path: 'heatRegistrations>/dateTime', formatter: '.formatter.dayTimeIsoLabel'}" />
                  <ObjectAttribute title="{i18n>common.distance}" text="{path: 'heatRegistrations>/race', formatter: '.formatter.distanceLabel'}" />
                  <ObjectAttribute title="{i18n>common.heatNr}" text="{heatRegistrations>/number}" />
                </layout:VerticalLayout>

                <layout:VerticalLayout>
                  <ObjectAttribute title="{i18n>common.state}" text="{path: 'heatRegistrations>/', formatter: '.formatter.heatStateLabel'}" />
                  <!-- <ObjectAttribute title="{i18n>common.seededLbl}" text="{= ${heatRegistrations>/race/seeded} ? ${i18n>common.yes} : ${i18n>common.no}}" /> -->
                  <ObjectAttribute title="{i18n>common.refereeAbr}" text="{heatRegistrations>/referee/lastName}, {heatRegistrations>/referee/firstName}"
                    visible="{= ${heatRegistrations>/referee} !== undefined }" />
                </layout:VerticalLayout>
              </layout:HorizontalLayout>
            </f:DynamicPageHeader>
          </f:header>

          <!-- DynamicPage Content -->
          <f:content>
            <Table autoPopinMode="true" growing="true" growingThreshold="50" growingScrollToLoad="true"
              sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" class="sapUiNoContentPadding"
              items="{path: 'heatRegistrations>/registrations/', sorter: [{path: 'result/rankSort', descending: false}, {path: 'bib', descending: false} ]}">

              <columns>
                <Column hAlign="Center" width="3rem" importance="High" popinDisplay="Inline" visible="{= ${heatRegistrations>/state} >= 4 }">
                  <header>
                    <Text text="{i18n>common.rankAbr}" class="bold" wrapping="false" />
                  </header>
                </Column>
                <Column hAlign="Center" width="3rem" importance="High" popinDisplay="Inline">
                  <header>
                    <Text text="{i18n>common.bib}" class="bold" wrapping="false" />
                  </header>
                </Column>
                <Column width="12rem" importance="High" popinDisplay="Inline">
                  <header>
                    <Text text="{i18n>common.boat}" class="bold" wrapping="false" />
                  </header>
                </Column>
                <Column hAlign="Center" width="3rem" importance="Low" popinDisplay="Inline">
                  <header>
                    <Text text="{i18n>heatRegistrationTable.column.lane}" class="bold" wrapping="false" />
                  </header>
                </Column>
                <Column hAlign="End" width="4rem" importance="High" popinDisplay="Inline" visible="{= ${heatRegistrations>/state} >= 4 }">
                  <header>
                    <Text text="{i18n>heatRegistrationTable.column.result}" class="bold" wrapping="false" />
                  </header>
                </Column>
                <!-- <Column hAlign="Center" width="4rem" importance="Low" popinDisplay="Inline"
                  visible="{=${heatheatRegistrations>/state}>=4 &amp;&amp; ${identity>/authenticated}}">
                  <header>
                    <Text text="{i18n>common.points}" class="bold" wrapping="false" />
                  </header>
                </Column> -->
              </columns>

              <items>
                <ColumnListItem
                  highlight="{path: 'heatRegistrations>', formatter: '.formatter.heatRegistrationHighlight'}" vAlign="Top">
                  <cells>
                    <Text text="{heatRegistrations>result/rankLabel}" />

                    <layout:VerticalLayout>
                      <Text text="{heatRegistrations>registration/bib}" visible="{=${heatRegistrations>registration/cancelled}}"
                        class="cancelled" />
                      <Text text="{heatRegistrations>registration/bib}" visible="{=!${heatRegistrations>registration/cancelled}}" />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout>
                      <Text text="{path: 'heatRegistrations>registration', formatter: '.formatter.boatLabel'}"
                        class="boldCancelled sapUiTinyMarginBottom" visible="{=${heatRegistrations>registration/cancelled}}" />
                      <Text text="{path: 'heatRegistrations>registration', formatter: '.formatter.boatLabel'}"
                        class="bold sapUiTinyMarginBottom" visible="{=!${heatRegistrations>registration/cancelled}}" />

                      <Text text="{path: 'heatRegistrations>registration/crew', formatter: '.formatter.crewLabel'}"
                        visible="{= ${heatRegistrations>registration/cancelled}}" class="cancelled" />
                      <Text text="{path: 'heatRegistrations>registration/crew', formatter: '.formatter.crewLabel'}"
                        visible="{= !${heatRegistrations>registration/cancelled}}" />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout>
                      <Text text="{heatRegistrations>lane}" visible="{=${heatRegistrations>registration/cancelled}}"
                        class="cancelled" />
                      <Text text="{heatRegistrations>lane}" visible="{=!${heatRegistrations>registration/cancelled}}" />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout>
                      <Text text="{heatRegistrations>result/result}" />
                      <Text text="{=${heatRegistrations>result/delta}?${heatRegistrations>result/delta}:''}" />
                    </layout:VerticalLayout>
                    <!-- <Text text="{heatRegistrations>result/points}" /> -->
                  </cells>
                </ColumnListItem>
              </items>
            </Table>
          </f:content>
        </f:DynamicPage>
      </content>
    </Page>

  </mvc:content>
</mvc:View>