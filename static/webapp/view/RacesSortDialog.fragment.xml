<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
  xmlns:cust="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
  <ViewSettingsDialog confirm=".onSortDialogConfirm">
    <sortItems>
      <ViewSettingsItem text="{i18n>common.number}" key="id" selected="true" cust:column="raceNumber" />
      <ViewSettingsItem text="{i18n>common.distance}" key="distance" cust:column="raceDistance" />
      <ViewSettingsItem text="{i18n>common.registrations}" key="entriesCount" cust:column="raceEntries" />
      <ViewSettingsItem text="{i18n>common.seeded}" key="seeded" cust:column="raceSeeded" />
      <ViewSettingsItem text="{i18n>common.state}" key="state" cust:column="raceState" />
    </sortItems>
  </ViewSettingsDialog>
</core:FragmentDefinition>