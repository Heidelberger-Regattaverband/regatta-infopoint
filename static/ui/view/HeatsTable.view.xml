<mvc:View controllerName="de.regatta_hd.infopoint.controller.HeatsTable" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">

  <Table items="{heat>/}" growing="true" growingScrollToLoad="true">
    <columns>
      <Column hAlign="Center" width="4em">
        <Text text="{i18n>heatsTable.column.number}" />
      </Column>
      <Column hAlign="Center" width="6em">
        <Text text="{i18n>heatsTable.column.date}" />
      </Column>
      <Column hAlign="Center" width="6em">
        <Text text="{i18n>heatsTable.column.time}" />
      </Column>
      <Column hAlign="Begin" width="12em">
        <Text text="{i18n>heatsTable.column.race}" />
      </Column>
      <Column hAlign="Begin" width="12em">
        <Text text="{i18n>heatsTable.column.shortLabel}" />
      </Column>
      <Column hAlign="Center" width="12em">
        <Text text="{i18n>heatsTable.column.state}" />
      </Column>
    </columns>

    <items>
      <ColumnListItem>
        <cells>
          <Text text="{heat>number}" />
          <Text text="{heat>date}" />
          <Text text="{heat>time}" />
          <Text text="{
            parts: [
              {path: 'heat>race_number'},
              {path: 'heat>round_code'},
              {path: 'heat>division_number'}
            ],
            formatter: 'de.regatta_hd.infopoint.model.RaceLabelFormatter.raceLabel'
          }" />
          <Text text="{heat>race_short_label}" />
          <Text text="{
            parts: [
              {path: 'heat>state'},
              {path: 'heat>cancelled'}
            ],
            formatter: '.stateLabelFormatter.stateLabel'
          }" />
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</mvc:View>