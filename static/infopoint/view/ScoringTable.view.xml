<mvc:View controllerName="de.regatta_hd.infopoint.controller.ScoringTable" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
  <mvc:content>

    <Page title="{i18n>launchpad.scoringTile.header}" class="sapUiNoContentPadding" showNavButton="true" navButtonPress="onNavBack">
      <content>

        <Table autoPopinMode="true" items="{scoring>/}" growing="true" growingScrollToLoad="true" growingThreshold="50" sticky="ColumnHeaders" class="sapUiNoContentPadding">
          <columns>
            <Column hAlign="Center" width="1rem" importance="High" popinDisplay="Inline">
              <header>
                <Text text="{i18n>common.rank}" class="bold" wrapping="false" />
              </header>
            </Column>
            <Column hAlign="End" width="5rem" importance="Low" popinDisplay="Inline">
              <header>
                <Text text="{i18n>scoringTable.column.points}" class="bold" wrapping="false" />
              </header>
            </Column>
            <Column hAlign="Begin" width="auto" importance="High" popinDisplay="Inline">
              <header>
                <Text text="{i18n>scoringTable.column.club}" class="bold" wrapping="false" />
              </header>
            </Column>
          </columns>

          <items>
            <ColumnListItem>
              <cells>
                <Text text="{scoring>rank}" />
                <Text text="{path: 'scoring>points', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 3} }" />
                <Text text="{scoring>club_short_label}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>

      </content>
    </Page>

  </mvc:content>
</mvc:View>