<mvc:View controllerName="de.regatta_hd.infopoint.controller.RacesTable" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
  <mvc:content>

    <Page title="{i18n>common.offer}" class="sapUiNoContentPadding" showNavButton="true" navButtonPress="onNavBack">
      <content>

        <Table autoPopinMode="true" items="{races>/}" growing="true" growingScrollToLoad="true" growingThreshold="50" sticky="ColumnHeaders" class="sapUiNoContentPadding">
          <columns>
            <Column hAlign="Center" width="3rem" importance="High" popinDisplay="Inline">
              <header>
                <Text text="{i18n>common.number}" class="bold" wrapping="false" />
              </header>
            </Column>
            <Column hAlign="Begin" width="6rem" importance="High" popinDisplay="Inline">
              <header>
                <Text text="{i18n>common.shortLabel}" class="bold" wrapping="false" />
              </header>
            </Column>
            <Column hAlign="Begin" width="11rem" importance="Low" popinDisplay="Inline">
              <header>
                <Text text="{i18n>common.label}" class="bold" wrapping="false" />
              </header>
            </Column>
            <Column hAlign="Begin" width="4rem" importance="High" popinDisplay="Inline">
              <header>
                <Text text="{i18n>common.comment}" class="bold" wrapping="false" />
              </header>
            </Column>
            <Column hAlign="Center" width="4rem" importance="Low" popinDisplay="Inline">
              <header>
                <Text text="{i18n>common.distance}" class="bold" wrapping="false" />
              </header>
            </Column>
            <Column hAlign="Center" width="7rem" importance="Low" popinDisplay="Inline">
              <header>
                <Text text="{i18n>common.raceMode}" class="bold" wrapping="false" />
              </header>
            </Column>
          </columns>

          <items>
            <ColumnListItem type="Navigation">
              <cells>
                <Text text="{races>number}" />
                <Text text="{races>shortLabel}" />
                <Text text="{races>longLabel}" />
                <Text text="{races>comment}" />
                <Text text="{path: 'races>', formatter: '.formatter.distanceLabel'}" />
                <Text text="{races>raceMode}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>

      </content>
    </Page>

  </mvc:content>
</mvc:View>