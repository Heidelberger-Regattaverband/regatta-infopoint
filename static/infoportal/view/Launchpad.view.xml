<mvc:View controllerName="de.regatta_hd.infopoint.controller.Launchpad" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
  xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" core:require="{ formatMessage: 'sap/base/strings/formatMessage' }">
  <mvc:content>

    <Page title="{parts: [{path:'i18n>launchpad.title'}, {path:'regatta>/title'}], formatter: 'formatMessage'}"
      class="sapUiNoContentPadding">

      <headerContent>
        <Text text="{user>/name}" visible="{user>/authenticated}" />
        <Button icon="{=${user>/authenticated}?'sap-icon://log':'sap-icon://person-placeholder'}" press="showLoginButtonPress"
          text="{=${user>/authenticated}?${i18n>common.logoff}:${i18n>common.login}}" />
      </headerContent>

      <content>
        <layout:HorizontalLayout allowWrapping="true">
          <layout:content>

            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{i18n>common.offerAndRegistrations}" press=".onNavToRaces">
              <tileContent>
                <TileContent>
                  <content>
                    <ImageContent src="sap-icon://list" />
                  </content>
                </TileContent>
              </tileContent>
            </GenericTile>

            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{i18n>launchpad.heatsTile.header}"
              press=".onNavToHeats">
              <tileContent>
                <TileContent>
                  <content>
                    <ImageContent src="sap-icon://fob-watch" />
                  </content>
                </TileContent>
              </tileContent>
            </GenericTile>

            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{i18n>launchpad.scoringTile.header}"
              press=".onNavToScoring">
              <tileContent>
                <TileContent>
                  <content>
                    <ImageContent src="sap-icon://competitor" />
                  </content>
                </TileContent>
              </tileContent>
            </GenericTile>

            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{i18n>launchpad.statistics.header}"
              press=".onNavToStatistics">
              <tileContent>
                <TileContent>
                  <content>
                    <ImageContent src="sap-icon://bar-chart" />
                  </content>
                </TileContent>
              </tileContent>
            </GenericTile>

            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Kiosk"
              press=".onNavToKiosk">
              <tileContent>
                <TileContent>
                  <content>
                    <ImageContent src="sap-icon://synchronize" />
                  </content>
                </TileContent>
              </tileContent>
            </GenericTile>

          </layout:content>
        </layout:HorizontalLayout>

      </content>
    </Page>

  </mvc:content>
</mvc:View>