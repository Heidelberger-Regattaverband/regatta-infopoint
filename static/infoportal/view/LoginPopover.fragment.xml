<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">

  <ResponsivePopover id="loginPopover" title="{i18n>common.login}" class="sapUiContentPadding" placement="Bottom" initialFocus="user">
    <content>
      <VBox>
        <Input id="user" placeholder="{i18n>common.user}" value="{credentials>/user}" submit="onUserSubmit" />
        <Input id="password" placeholder="{i18n>common.password}" value="{credentials>/password}" submit="onPasswordSubmit" type="Password" />
        <Button id="login" text="{i18n>common.login}" width="100%" press="onLoginPress" />
      </VBox>
    </content>
  </ResponsivePopover>

</core:FragmentDefinition>