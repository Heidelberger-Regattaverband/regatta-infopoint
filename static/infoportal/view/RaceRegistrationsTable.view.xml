<mvc:View xmlns:core="sap.ui.core" controllerName="de.regatta_hd.infopoint.controller.RaceRegistrationsTable" xmlns="sap.m" xmlns:f="sap.f"
  xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
  <mvc:content>

    <!-- see: https://sapui5.hana.ondemand.com/#/entity/sap.ui.core.ContainerPadding and
    https://sapui5.hana.ondemand.com/#/topic/c71f6df62dae47ca8284310a6f5fc80a -->
    <Page title="{i18n>common.registrations}" class="sapUiNoContentPadding" showNavButton="true" navButtonPress="onNavBack">
      <content>

        <f:DynamicPage toggleHeaderOnTitleClick="false" class="sapUiNoContentPadding">
          <!-- DynamicPage Title -->
          <f:title>
            <f:DynamicPageTitle>
              <f:heading>
                <Title text="{path: 'race>/', formatter: '.formatter.nrRaceLabel'}" wrapping="true" wrappingType="Normal" />
              </f:heading>

              <f:expandedContent>
                <Label text="{race>/longLabel} {race>/comment}" />
              </f:expandedContent>

              <f:navigationActions>
                <Button type="Transparent" icon="sap-icon://close-command-field" press="onFirstPress" tooltip="First"
                  enabled="{= ${race>/_nav/isFirst} ? false : true }" />
                <Button type="Transparent" icon="sap-icon://navigation-left-arrow" press="onPreviousPress" tooltip="Previous"
                  enabled="{= ${race>/_nav/isFirst} ? false : true }" />
                <Button type="Transparent" icon="sap-icon://navigation-right-arrow" press="onNextPress" tooltip="Next"
                  enabled="{= ${race>/_nav/isLast} ? false : true }" />
                <Button type="Transparent" icon="sap-icon://open-command-field" press="onLastPress" tooltip="Last"
                  enabled="{= ${race>/_nav/isLast} ? false : true }" />
              </f:navigationActions>
            </f:DynamicPageTitle>
          </f:title>

          <!-- DynamicPage Header -->
          <f:header>
            <f:DynamicPageHeader>
              <layout:HorizontalLayout allowWrapping="true">
                <layout:VerticalLayout class="sapUiMediumMarginEnd">
                  <ObjectAttribute title="{i18n>common.distance}" text="{path: 'race>/', formatter: '.formatter.distanceLabel'}" />
                  <ObjectAttribute title="{i18n>common.seeded}" text="{= ${race>/seeded} ? ${i18n>common.yes} : ${i18n>common.no}}" />
                </layout:VerticalLayout>
              </layout:HorizontalLayout>
              <layout:VerticalLayout>
                <ObjectAttribute title="{i18n>common.state}"
                  text="{= ${race>/cancelled} ? ${i18n>common.cancelled} : ${i18n>common.raceDriven}}" />
                <ObjectAttribute title="{i18n>common.registrations}" text="{race>/registrationsCount}" />
              </layout:VerticalLayout>
            </f:DynamicPageHeader>
          </f:header>

          <!-- DynamicPage Content -->
          <f:content>
            <!-- <ScrollContainer height="100%" vertical="true"> -->

            <Table id="registrationsTable" autoPopinMode="true"
              items="{path: 'raceRegistrations>/', sorter: [{path: 'result/rankSort', descending: false}, {path: 'bib', descending: false} ]}"
              growing="true" growingThreshold="50" growingScrollToLoad="true" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders"
              class="sapUiNoContentPadding">
              <columns>
                <Column hAlign="Center" width="3rem" importance="High" popinDisplay="Inline">
                  <header>
                    <Text text="{i18n>common.bib}" class="bold" />
                  </header>
                </Column>
                <Column hAlign="Begin" width="12rem" importance="High" popinDisplay="Inline">
                  <header>
                    <Text text="{i18n>common.boat}" class="bold" />
                  </header>
                </Column>
                <Column hAlign="Begin" width="8rem" importance="Low" popinDisplay="Inline">
                  <header>
                    <Text text="{i18n>common.clubRegistration}" class="bold" />
                  </header>
                </Column>
              </columns>

              <items>
                <ColumnListItem highlight="{path: 'raceRegistrations>', formatter: '.formatter.raceRegistrationHighlight'}" vAlign="Top">
                  <cells>
                    <layout:VerticalLayout>
                      <Text text="{raceRegistrations>bib}" visible="{= ${raceRegistrations>cancelled}}" class="cancelled" />
                      <Text text="{raceRegistrations>bib}" visible="{= !${raceRegistrations>cancelled}}" />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout>
                      <Text text="{path: 'raceRegistrations>', formatter: '.formatter.boatLabel'}"
                        class="boldCancelled sapUiTinyMarginBottom" visible="{= ${raceRegistrations>cancelled}}" />
                      <Text text="{path: 'raceRegistrations>', formatter: '.formatter.boatLabel'}"
                        class="bold sapUiTinyMarginBottom" visible="{= !${raceRegistrations>cancelled}}" />

                      <Text text="{path: 'raceRegistrations>crew', formatter: '.formatter.crewLabel'}"
                        visible="{= ${raceRegistrations>cancelled}}" class="cancelled" />
                      <Text text="{path: 'raceRegistrations>crew', formatter: '.formatter.crewLabel'}"
                        visible="{= !${raceRegistrations>cancelled}}" />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout>
                      <Text text="{raceRegistrations>club/shortName}, {raceRegistrations>club/city}" visible="{= ${raceRegistrations>cancelled}}" class="cancelled" />
                      <Text text="{raceRegistrations>club/shortName}, {raceRegistrations>club/city}" visible="{= !${raceRegistrations>cancelled}}" />
                    </layout:VerticalLayout>
                  </cells>
                </ColumnListItem>
              </items>
            </Table>
            <!-- </ScrollContainer> -->

          </f:content>
        </f:DynamicPage>

      </content>
    </Page>

  </mvc:content>
</mvc:View>